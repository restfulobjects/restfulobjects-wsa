@model System.Exception
@using NakedObjects.Resources
@using NakedObjects.Web.Mvc.Html

@{ 
 ViewBag.Title = "@(MvcUi.DomainErrorTitle)"; 
}

@section MainContent { 
@(Html.History()) 
    <div class="error">
        <img alt="error"  src="@(Url.Content("~/Images/system-error.png"))" />
	    <h2>@(MvcUi.DomainErrorText)</h2>

	    <p>@(Model.Message)</p>
    </div> 
}
